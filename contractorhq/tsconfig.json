{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"], // Root-level imports (e.g., @/app/page.tsx)
      "@components/*": ["./src/components/*"], // Components (e.g., @components/layout/Header)
      "@styles/*": ["./src/styles/*"], // Global styles (e.g., @styles/globals.css)
      "@app/*": ["./src/app/*"], // App router files (e.g., @app/(auth)/login/page)
      "@lib/*": ["./src/lib/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
